#website %>% 
#  group_by(code) %>% 
#  summarise(Visitors = sum(Visitors)) %>% 
#  rename(iso_a3 = code)

total_visitors <- website %>% 
  group_by(country_code) %>% 
  summarise(visitors = sum(visitors)) %>% 
  rename(iso_a2 = country_code)

period <- paste(format(range(website$date), "%B-%Y"), collapse = " to ")
